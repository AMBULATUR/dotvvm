@viewModel DotVVM.Samples.BasicSamples.ViewModels.FeatureSamples.Validation.DateTimeValidationViewModel, DotVVM.Samples.BasicSamples

<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        .has-error {
            border: solid 1px red;
        }
    </style>
</head>
<body >
    <dot:TextBox Validator.InvalidCssClass="has-error" ValueType="DateTime" Text="{value: DateTimeTestValue}" Validator.Value="{value:  DateTimeTestValue }" />
    <dot:Button Text="Validate" Click="{command:  ValidateRequiredDateTime() }" ID="ValidateButton"></dot:Button>
    <p>
        REM: This viewmodel tests even Validation.Target on each property.
    </p>

</body>
</html>

