{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-samples",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "${workspaceFolder}/DotVVM.Samples.BasicSamples.AspNetCoreLatest/DotVVM.Samples.BasicSamples.AspNetCoreLatest.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-command-line",
      "command": "dotnet",
      "type": "shell",
      "dependsOn": [
        "build-selenium-generator"
      ],
      "args": [
        "build",
        "${workspaceFolder}/DotVVM.CommandLine/DotVVM.CommandLine.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-selenium-generator",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "${workspaceFolder}/DotVVM.Framework.Tools.SeleniumGenerator/DotVVM.Framework.Tools.SeleniumGenerator.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
